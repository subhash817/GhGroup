<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.VendDebitNoteDetailsRegister">

        <include
            android:id="@+id/header_back"
            layout="@layout/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/cr_basicll"
            android:layout_margin="6dp"
            android:weightSum="4"
            android:background="@color/dark_blue"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_credNote_cust_srNobasic"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="S.NO."
                android:textColor="@color/darkblack"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_VchrNum"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Vchr Num"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_Branch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Branch"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_TotalAmt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Total Amt"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_More"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/more_event_white" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_Narration"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Narration"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_Balance"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Balance"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_VendorName"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Vendor Name"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_DueDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Due Date"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_LRDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="LR Date"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_LRNo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="LR No"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dr_TransporterName"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Trans Name"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/TextHide"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="Hide.."
                android:textColor="@color/sky"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvDebitRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llvendDebitReg_showTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:background="@drawable/button_design">

            <TextView
                android:id="@+id/vendDebitNoteReg_showTotal"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingEnd="10sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:text="SHOWS CREDIT"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="SHOWS DEBIT"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/debitnoteReg_basicll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:stretchMode="columnWidth"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Total:"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_debitTotalAmt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="3dp"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/debitNotePdfDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:text="@string/pdf" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/debit_note_reg_excelDownload"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                android:background="@drawable/search_button_design"
                android:text="@string/excel" />

        </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

   </LinearLayout>

 </layout>