<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activity.GHBilling_Graph_Details">

        <include
            android:id="@+id/header_back"
            layout="@layout/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="6dp"
                android:weightSum="4"
                android:stretchMode="columnWidth"
                android:id="@+id/basicll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_weight="1"
                    android:stretchMode="columnWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/sky"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Date"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:stretchMode="columnWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/sky"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Vchr Num"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:stretchMode="columnWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/sky"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Customer Name"
                        android:textColor="@color/darkblack"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:stretchMode="columnWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/sky"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Amt"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@color/sky"
                        android:gravity="center_horizontal" />

                </RelativeLayout>


                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gl_Branch"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="Branch"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_gl_Debit"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="Debit"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_gh_Credit"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="Credit"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gl_VendorName"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="BP Name"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gl_LRNO"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="@string/lr_no"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gl_TransporterName"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="Trans Name"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gl_LRDate"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="LR Date"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gl_NoOfParcels"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="No Of Parcels"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_gl_DocEntry"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="Doc Entry"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_gl_OutStanding"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:text="Outstanding"
                        android:textColor="@color/darkblack"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:background="@color/sky"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:src="@drawable/download" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/TextHide"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Hide.."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_More"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:src="@drawable/more_event_white" />

                <HorizontalScrollView
                    android:id="@+id/moreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_genLed_cust_srNo"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:text="S.NO."
                            android:textColor="@color/darkblack"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bill_reg_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_gravity="center" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<Button
                    android:id="@+id/bill_Reg_PDFDOWNLOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/pdf" />-->

                <Button
                    android:id="@+id/bill_reg_excelDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/excel" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

 </layout>