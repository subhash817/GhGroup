<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.PaymentRegisterDetailsActivity">

        <include
            android:id="@+id/header_back"
            layout="@layout/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/payment_basicll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:weightSum="4"
            android:background="@color/dark_blue"
            android:stretchMode="columnWidth"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_payment_cust_srNobasic"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="S.NO."
                android:textColor="@color/darkblack"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_pay_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_pay_DocNum"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Doc Num"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_pay_Branch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Mode Of Pay"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_pay_TotalAmt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Amt"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

            <!-- <ImageView
                 android:id="@+id/img_More"
                 android:layout_width="30dp"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:src="@drawable/more_event_white" />

             <HorizontalScrollView
                 android:id="@+id/moreDetails"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:visibility="gone">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_pay_ModeofPayment"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Mode Payment"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_pay_RefBills"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Ref Bills"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_pay_InstrNo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Instr No"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_pay_InstrDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Instr Date"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_pay_Narration"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/sky"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Narration"
                    android:textColor="@color/darkblack"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/TextHide"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="Hide.."
                android:textColor="@color/sky"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <!--</HorizontalScrollView>

    </LinearLayout>-->

        <!--</HorizontalScrollView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <!--<ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateDrawable="@drawable/progress_bar" />-->


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/payment_basicll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:stretchMode="columnWidth"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_payDate"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Total:"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_payVoucherNumber"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_payCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_payTotalBill"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/darkblack"
                    android:textSize="9sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llpaymentReg_showTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:background="@color/dark_blue">

            <TextView
                android:id="@+id/payReg_showTotal"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingEnd="10sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:text="SHOWS CREDIT"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:text="SHOWS DEBIT"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/paymentReg_customer_PDFDOWNLOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:text="@string/pdf" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/payment_reg_excelDownload"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                android:background="@drawable/search_button_design"
                android:text="@string/excel" />

        </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </LinearLayout>
</layout>