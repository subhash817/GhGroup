<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/row_height">

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtVchrType"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtDate"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtvchrNumber"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtBranch"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtDebit"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtCredit"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtVendorName"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtlrNo"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtTransName"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtlrDate"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtNo_of_parcels"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

</LinearLayout>