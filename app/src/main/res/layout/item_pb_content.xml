<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Vchr_Type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Vchr Type"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Date"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/DueDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="DueDate"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Vchr_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Vchr num"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Branch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Branch"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/Bill_Amt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Bill Amt"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/Balance_Due"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Balance Due"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/Vendor_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Vendor Name"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/LR_Nos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="LR No"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Trans_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Trans Name"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/LR_Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="LR Date"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Balanced"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Balance"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/DocEntrys"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="DocEntry"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Downloads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Download"
        android:textAllCaps="false"
        android:textColor="@color/black" />

</LinearLayout>