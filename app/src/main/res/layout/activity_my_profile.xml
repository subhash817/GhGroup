<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyProfileActivity">
    <include
        android:id="@+id/header_back"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:gravity="center|top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:src="@drawable/profile" />

            <!-- <ProgressBar
                 android:id="@+id/pb_profile"
                 style="?android:attr/progressBarStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:visibility="gone"/>-->

        </RelativeLayout>

        <TextView
            android:id="@+id/txtusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Adarsh"
            android:layout_margin="1dp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Company Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/txt_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="3dp"
                android:text="GH Agencies Inc."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />-->

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="GSTIN"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/txt_gst_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="3dp"
                android:text="NA"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />-->

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Company Billing Address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/txt_comp_billing_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="3dp"
                android:text="NA"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />-->

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:text="Company Shipping Address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:src="@drawable/round_plus"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:background="#cfecfe"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Address"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/sky" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="GSTIN"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cust_profile_shipping_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <!--<TextView
                android:id="@+id/txt_comp_shipping_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="NA"
                android:padding="3dp"
                android:textStyle="normal"/>-->

            <!--<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/sky" />-->

            <!--<TextView
                android:id="@+id/txt_comp_shipping_Gstin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="NA"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="3dp"
                android:textStyle="normal" />-->

         </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>